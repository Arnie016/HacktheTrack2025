{
  "version": 2,
  "name": "ai-pit-strategy",
  "builds": [
    {
      "src": "webapp.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "webapp.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "MC_BASE_SCENARIOS": "250",
    "USE_VARIANCE_REDUCTION": "1"
  },
  "functions": {
    "webapp.py": {
      "memory": 512,
      "maxDuration": 10
    }
  }
}
